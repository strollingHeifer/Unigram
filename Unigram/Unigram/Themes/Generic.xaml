                <ControlTemplate TargetType="local:TagsTextBoxItem">
                    <local:TagsTextBoxItemPresenter x:Name="Presenter" PlaceholderText="{TemplateBinding PlaceholderText}" Tag="{TemplateBinding Content}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

